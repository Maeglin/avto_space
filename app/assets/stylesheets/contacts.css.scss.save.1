#YMapsID{
  width: 600px;
  height: 400px;
  color: black;
  float: right;
  width: 50%;
}

#info{
  float: left;
  width: 50%;
  span{
    font-size: 1.5em;
  }
}

.cont_title{
  font-size: 1.5em;
}

#ajaxform{
  width: 450px;
  fieldset{ 
    border: none;
    width: 100%;
    textarea{
      border: none;
      overflow-y: hidden;
      resize: none;
      width: 100%;
    }
    abbr{
      display: none;
    }
  }
  padding-bottom: 50px;
}

#message_name{
  float: right;
  margin-right: 230px;
}

#message_email{
  float: right;
  margin-right: 230px;
}

#btn{
  
  &:hover{
    background-color:#ffffff;
  }
}
